/* components/spaceDynamic/spaceDynamic.wxss */
.dynamic-title {
    width: 100%;
    position: relative;
    font-size: 28rpx;
}

.dynamic-title > .title-content {
    display: inline-block;
}

.user-content {
    width: 100%;
    max-height: 100rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: flex-start;
}

.user-content .user-face {
    width: 100rpx;
    height: 100rpx;
    margin: 0 20rpx;
}

.user-content .user-name-time {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.user-content .user-name-time .user-name {
    font-size: 32rpx;
}

.user-content .user-name-time .issue-time {
    font-size: 24rpx;
    color: #999;
}

.video-cover {
    width: 100%;
    position: relative;
}

.video-cover > image {
    width: 100%;
}

.play-count {
    width: 100%;
    height: 90rpx;
    display: flex;
    color: #ffffff;
    position: absolute;
    bottom: 0;
    left: 0;
}

.play-count > text {
    margin: 0 20rpx
}

.duration {
    background: rgba(0, 0, 0, 0.5);
    padding: 6rpx 10rpx;
}

.video-cover > .daily-img > image {
    width: 30%;
    height: 220rpx;
    display: inline-block;
    margin: 0 10rpx;
}

.video-cover > video {
    width: 100%;
    display: inline-block;
}

.video-cover > view > image {
    width: 100%;
}

.video-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 24rpx
}

.footer-info {
    width: 100%;
    height: 60rpx;
    display: flex;
    text-align: center;
    justify-content: space-around;
}

.footer-info .share, .footer-info .reply, .footer-info .like {
    flex: 1;
    display: flex;
    justify-content: center;
    font-size: 24rpx;
    padding: 0;
    margin: 0;
    background: transparent;
}

.footer-info .share::after, .footer-info .reply::after, .footer-info .like::after {
    border: none;
}

.share image, .reply image, .like image {
    width: 40rpx;
    height: 40rpx;
    display: inline;
    position: absolute;
    left: 50rpx;
    top: 10rpx;
    vertical-align: middle;
}


.topic-tag {
    color: #1389bf;
}