/* components/chaseContent/chaseContent.wxss */
.follow-detail {
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.follow-cover {
  width: 170rpx;
  height: 170rpx;
  border-radius: 10rpx;
}

.follow-drama {
  width: 170rpx;
}

.follow-name {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.follow-episode {
  color: rgb(156, 152, 152)
}