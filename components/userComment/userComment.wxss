/* components/userComment/userComment.wxss */
.comment-detail {
	width: 100%;
	box-sizing: border-box;
	margin: 20rpx 0;
}

.user {
	width: 100%;
	height: 90rpx;
	display: flex;
}

.user-avatar {
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
	margin-right: 40rpx;
}

.user-info {
	height: 100%;
	position: relative;
}

.level-five {
	color: #fd7397;
}

.user-name {
	margin-right: 10rpx;
}

.level-icon {
	width: 50rpx;
	height: 60rpx;
	position: absolute;
	top: -12rpx;
}

.release-time {
	display: block;
	color: #9c9c9c
}

.comment-message {
	margin: 0 60rpx 20rpx 130rpx;
	font-size: 28rpx;
}