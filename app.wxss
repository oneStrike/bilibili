page {
	height: 100%;
	padding: 0 10rpx;
	box-sizing: border-box;
}

/*搜索框*/
.search {
	width: 100%;
	height: 90rpx;
	border-bottom: 1rpx solid #e7e7e7;
}

.search-input {
	width: 600rpx;
	height: 60rpx;
	background: #f4f4f4;
	border-radius: 100rpx;
	position: relative;
	font-size: 28rpx;
	padding-left: 70rpx;
	margin: 0 auto;
	box-sizing: border-box;
}

.search-icon {
	width: 46rpx;
	height: 40rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	left: 20rpx;
}