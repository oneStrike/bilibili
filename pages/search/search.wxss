/* pages/search/search.wxss */
.search-container {
	width: 100%;
	height: 100%;
	position: relative;
	overflow: hidden;
}

.main-search {
	width: 100%;
	height: 100%;
}

/*热搜*/
.hot-search {
	width: 100%;
	max-height: 410rpx;
	overflow: hidden;
	position: relative;
	z-index: 2;
}

.hot-search-head {
	font-size: 40rpx;
	margin: 40rpx 0;
}

.hot-search-content {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
}

.hot-search-item {
	background: #f6f6f6;
	padding: 10rpx;
	font-size: 24rpx;
	margin: 15rpx 10rpx 0 10rpx;

}

/*搜索历史*/
.search-history {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	padding: 500rpx 10rpx 0 10rpx;
	position: fixed;
	top: 0;
	left: 0;
	display: flex;
	flex-direction: column;
}

.history-search-head {
	font-size: 40rpx;
	margin: 40rpx 0;
}

.history-search-content {
	flex-grow: 0;
	overflow: hidden;

}

.history-search-item {
	width: 100%;
	height: 90rpx;
	font-size: 28rpx;
	line-height: 90rpx;
	border-bottom: 1rpx solid #e7e7e7;
}

.delete-history-search {
	font-size: 32rpx;
	color: #505050;
	float: right;
}

.history-search-icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle;
	margin: 0 30rpx;

}

.delete-history-search[plain] {
	border: none;
}

.clear-history-search {
	width: 100%;
	height: 90rpx;
	text-align: center;
}

.clear-btn {
	width: 340rpx;
	height: 90rpx;
	font-size: 28rpx;
	line-height: 90rpx;
}

.clear-btn[plain] {
	border: none;
}

/*搜索建议*/
.search-suggest-container {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 100rpx;
	background: #fff;
	z-index: 3;
}

.search-suggest-item {
	display: flex;
	flex-wrap: wrap;
}

.search-suggest {
	background: #f6f6f6;
	padding: 10rpx;
	font-size: 28rpx;
	margin: 6rpx;
	border-radius: 10rpx;
}

.suggest_high_light {
	color: #fa7298;
	font-style: normal;
}