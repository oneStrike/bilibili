/* pages/userSpace/userSpace.wxss */
@import "../../components/spaceDynamic/spaceDynamic.wxss";
@import "../../components/popularList/popularList.wxss";

page {
    padding: 0;
}

.user-space-container {
    width: 100%;
    height: 100%;
    position: relative;
    font-size: 24rpx;
    padding: 10rpx;
    box-sizing: border-box;
}

.space-user {
    width: 100%;
    height: 600rpx;
    overflow: hidden;
    padding-bottom: 20rpx;
    background: #fff;
}

.space-bg {
    width: 100%;
    height: 200rpx;
    overflow: hidden;
}

.space-bg > image {
    width: 100%;
    height: 100%;
}

.space-user-info {
    width: 100%;
    height: 400rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.space-user-basic-info {
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
}

.space-user-avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    position: relative;
    top: -20rpx;
}

.space-user-relation {
    flex: 1;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.space-user-count {
    display: flex;
    justify-content: space-between;
}

.space-user-count > view {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 28rpx;
    text-align: center;
}

.space-count-type {
    font-size: 24rpx;
    color: #999;
}

.space-attention {
    border-left: 1rpx solid #999;
    border-right: 1rpx solid #999;
}

button[plain] {
    border: none;
    width: 100%;
    height: 60rpx;
    background: #fd7397;
    line-height: 60rpx;
    font-size: 24rpx;
    color: #fff;
}

.space-user-des {
    width: 100%;
    min-height: 200rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.space-user-level {
    width: 100%;
    height: 50rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.space-user-level > image {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}

.space-user-level > text {
    font-size: 32rpx;
    margin: 0 20rpx;
}

.space-vip {
    display: inline;
    height: 100%;
    margin: 0 20rpx;
    line-height: 50rpx;
}

.space-vip-type {
    background: #fd7397;
    color: #fff;
    padding: 4rpx 8rpx;
}

.space-spread {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}

.space-spread > text:nth-of-type(1) {
    color: #fd7397;
}

.space-sign {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box; /* autoprefixer: off */
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.space-nav {
    width: 100%;
    height: 90rpx;
    border-bottom: 1rpx solid #999;
    display: flex;
    justify-content: space-around;
    font-size: 32rpx;
    align-items: center;
    background: #fff;
    /*好佛系的一个属性*/
    position: sticky;
    top: 0;
    z-index: 1;
}

.space-nav > text {
    height: 100%;
    flex: 1;
    text-align: center;
    line-height: 90rpx;
}

.space-nav-top {
    position: fixed;
    top: 0;
    z-index: 1;
}

.active-plate {
    color: #fd7397;
}

.content-detail {
    width: 100%;
    position: realtive;
}

.dynamic-content {
    width: 100%;
    padding: 20rpx 0;
    border-bottom: 4rpx solid #999;
}

.photo-container {
    width: 100%;
    position: relative;
}

.photo-content {
    width: 100%;
    display: flex;
    overflow: hidden;
    padding: 10rpx;
    box-sizing: border-box;
}

.photo-cover {
    width: 200rpx;
    height: 200rpx;
    position: relative;
    flex-shrink: 0;
    margin-right: 20rpx;
}

.cover {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.count {
    width: 60rpx;
    height: 30rpx;
    background: rgba(0, 0, 0, .5);
    font-size: 24rpx;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    color: #fff;
    text-align: center;
}

.photo-title {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 24rpx;
}

.title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.photo-title > view > image {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}

.photo-title > view > image:nth-of-type(2) {
    width: 40rpx;
    height: 40rpx;
}

.photo-title > view > text:nth-of-type(1) {
    margin-right: 40rpx;
}

.user-space-container .space-comment {
    width: 100%;
    height: 60%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.space-comment-container {
    position: relative;
}

.space-close-comment {
    position: sticky;
    width: 100%;
    height: 80rpx;
    top: 0;
    z-index: 10;
    background: #fd7397;
}